                                                <div id="changePasswordForm">
                                                    <form id="passwordForm" onsubmit="validateForm(event)" method="post" action="/change-password">
                                                        <div class="form-group">
                                                            <label for="oldPassword">Old Password:</label>
                                                            <input type="password" id="oldPassword" name="oldPassword" required>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="newPassword">New Password:</label>
                                                            <input type="password" id="newPassword" name="newPassword" required>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="confirmNewPassword">Confirm New Password:</label>
                                                            <input type="password" id="confirmNewPassword" name="confirmNewPassword" required>
                                                        </div>
                                                        <button type="submit" class="btn btn-primary">Submit</button>
                                                    </form>
                                                </div>
                                               
                                                
                                                <script>
                                                    function validateForm(event) {
                                                        // Prevent the form from submitting
                                                        event.preventDefault();
                                                
                                                        // Get form elements
                                                        const oldPassword = document.getElementById('oldPassword');
                                                        const newPassword = document.getElementById('newPassword');
                                                        const confirmNewPassword = document.getElementById('confirmNewPassword');
                                                
                                                        // Reset previous error messages
                                                        clearErrorMessages();
                                                
                                                        // Validate Old Password
                                                        if (oldPassword.value.trim() === '') {
                                                            showError('Please enter the old password.', oldPassword);
                                                            return;
                                                        }
                                                
                                                        // Validate New Password
                                                        const newPasswordValue = newPassword.value.trim();
                                                        if (newPasswordValue === '') {
                                                            showError('Please enter a new password.', newPassword);
                                                            return;
                                                        }
                                                
                                                        // Strong password validation
                                                        const strongPasswordRegex = /^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$/;
                                                        if (!strongPasswordRegex.test(newPasswordValue)) {
                                                            showError('Password must have at least 8 characters including letters and numbers.', newPassword);
                                                            return;
                                                        }
                                                
                                                        // Validate Confirm New Password
                                                        if (confirmNewPassword.value.trim() === '') {
                                                            showError('Please confirm the new password.', confirmNewPassword);
                                                            return;
                                                        }
                                                
                                                        // Check if the new password and confirm new password match
                                                        if (newPassword.value !== confirmNewPassword.value) {
                                                            showError('New password and confirm new password must match.', confirmNewPassword);
                                                            return;
                                                        }
                                                
                                                        // If all validations pass, you can submit the form
                                                        document.getElementById('passwordForm').submit();
                                                    }
                                                
                                                    function showError(message, inputElement) {
                                                        const errorElement = document.createElement('div');
                                                        errorElement.className = 'error-message';
                                                        errorElement.textContent = message;
                                                        inputElement.parentNode.appendChild(errorElement);
                                                    }
                                                
                                                    function clearErrorMessages() {
                                                        const errorMessages = document.querySelectorAll('.error-message');
                                                        errorMessages.forEach(element => {
                                                            element.parentNode.removeChild(element);
                                                        });
                                                    }
                                                </script>
                                                
                                                


